{
  "family": "flash-sale-app",
  "networkMode": "awsvpc",
  "requiresCompatibilities": ["FARGATE"],
  "cpu": "2048",
  "memory": "4096",
  "executionRoleArn": "arn:aws:iam::095866558012:role/ecsTaskExecutionRole",
  "taskRoleArn": "arn:aws:iam::095866558012:role/flashSaleTaskRole",
  "containerDefinitions": [
    {
      "name": "flash-sale-app",
      "image": "095866558012.dkr.ecr.ap-south-1.amazonaws.com/flash-sale:latest",
      "cpu": 2048,
      "memory": 4096,
      "essential": true,
      "portMappings": [
        {
          "containerPort": 8080,
          "protocol": "tcp"
        }
      ],
      "environment": [
        {
          "name": "SPRING_PROFILES_ACTIVE",
          "value": "aws"
        },
        {
          "name": "AWS_REGION",
          "value": "ap-south-1"
        },
        {
          "name": "DB_HOST",
          "value": "flash-sale-postgres.cd2m8wkacytk.ap-south-1.rds.amazonaws.com"
        },
        {
          "name": "DB_PORT",
          "value": "5432"
        },
        {
          "name": "DB_NAME",
          "value": "flashsaledb"
        },
        {
          "name": "DB_USERNAME",
          "value": "flashsaleadmin"
        },
        {
          "name": "REDIS_HOST",
          "value": "flash-sale-redis.s8ocwg.0001.aps1.cache.amazonaws.com"
        },
        {
          "name": "REDIS_PORT",
          "value": "6379"
        },
        {
          "name": "KAFKA_BOOTSTRAP_SERVERS",
          "value": "10.0.10.61:9092"
        },
        {
          "name": "REDIS_PASSWORD",
          "value": ""
        }
      ],
      "secrets": [
        {
          "name": "DB_PASSWORD",
          "valueFrom": "arn:aws:secretsmanager:ap-south-1:095866558012:secret:flash-sale/db-password-KuPYVj"
        }
      ],
      "logConfiguration": {
        "logDriver": "awslogs",
        "options": {
          "awslogs-group": "/ecs/flash-sale",
          "awslogs-region": "ap-south-1",
          "awslogs-stream-prefix": "ecs"
        }
      },
      "healthCheck": {
        "command": [
          "CMD-SHELL",
          "wget --no-verbose --tries=1 --spider http://localhost:8080/actuator/health || exit 1"
        ],
        "interval": 30,
        "timeout": 5,
        "retries": 3,
        "startPeriod": 60
      }
    }
  ]
}
